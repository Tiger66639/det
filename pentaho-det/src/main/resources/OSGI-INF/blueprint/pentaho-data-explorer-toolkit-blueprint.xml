  </bean>
-->


  <bean id="dataSourceProviderAggregatorBean"
        class="com.pentaho.det.impl.domain.DataSourceProviderAggregator"
        scope="singleton">
  </bean>

  <reference-list id="dataSourceProviderList"
                  interface="com.pentaho.det.api.services.IDataSourceProvider"
                  availability="optional">
    <reference-listener ref="dataSourceProviderAggregatorBean"
                        bind-method="addDataSourceProvider"
                        unbind-method="removeDataSourceProvider"/>
  </reference-list>

  <bean id="previewDataSourceProviderBean"
        class="com.pentaho.det.impl.di.PreviewDataSourceProvider"
        scope="singleton">
    <pen:di-plugin type="org.pentaho.di.ui.spoon.SpoonUiExtenderPluginType"/>
  </bean>

  <service id="previewDataSourceProviderService"
           interface="com.pentaho.det.api.services.IDataSourceProvider"
           ref="previewDataSourceProviderBean">
  </service>

  <!--
    <service id="detNotifierWithHistory" ref="previewListener"
             interface="org.pentaho.osgi.notification.api.NotifierWithHistory"/>
  -->

  <!-- Endpoints -->
  <cxf:bus id="DataExplorerToolImplBus">
  </cxf:bus>

  <jaxrs:server address="/DataExplorerTool" id="dataExplorerToolService">
    <jaxrs:serviceBeans>
      <bean class="com.pentaho.det.impl.endpoints.Preview" >
        <!--argument ref="previewListener"/-->
        <property name="dataSourceProvider" ref="dataSourceProviderAggregatorBean"/>
      </bean>
    </jaxrs:serviceBeans>
    <jaxrs:providers>
      <bean class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider"/>
      <!--
      <bean class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
        <property name="dropRootElement" value="true"/>
        <property name="dropCollectionWrapperElement" value="true"/>
        <property name="serializeAsArray" value="true"/>
        <property name="supportUnwrapped" value="true"/>
      </bean>
      -->
    </jaxrs:providers>
  </jaxrs:server>


  <!-- Client side -->

  <!-- HttpService Whiteboard registration of web assets -->
  <service id="DataExplorerToolWeb"
           interface="org.ops4j.pax.web.extender.whiteboard.ResourceMapping">
    <bean class="org.ops4j.pax.web.extender.whiteboard.runtime.DefaultResourceMapping">
      <property name="alias" value="/DataExplorerTool/web"/>
      <property name="path" value="/web"/>
    </bean>
  </service>



